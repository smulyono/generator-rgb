{
    "name": "<%=appName%>",
    "description": "<%=appDescription%>",
    "version": "<%=appVersion%>",
    "ignore": [
        "**/.*",
        "node_modules",
        "bower_components",
        "test",
        "tests"
    ],
    "dependencies": {
        "requirejs": "~2.1.14",
        "underscore": "~1.6.0",
        "backbone": "~1.1.2",
        "jquery": "1.11.2",
        "modernizr": "~2.8.3",
        "bootstrap": "3.3.4",
        "almond": "~0.3.1"
    },
    "resolutions": {
        "jquery": "1.11.2"
    },
    "install": {
        "path": {
            "js": "assets/js/vendor",
            "css": "assets/css/vendor",
            "map": "assets/js/vendor",
            "less" : "assets/less/vendor",
            "eot" : "assets/fonts/vendor",
            "svg" : "assets/fonts/vendor",
            "ttf" : "assets/fonts/vendor", 
            "woff" : "assets/fonts/vendor",
            "woff2" : "assets/fonts/vendor"
        },
        "sources": {
            "jquery": [
                "bower_components/jquery/dist/jquery.min.js",
                "bower_components/jquery/dist/jquery.min.map"
            ],
            "modernizr": [
                "bower_components/modernizr/modernizr.js"
            ]
        }
    }
}